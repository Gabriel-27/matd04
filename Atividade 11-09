#include <iostream>
#include <iomanip>
#include <string>

using namespace std;

int main(){
	string letra;
	int maior = 0, aux = 0, valor = 0, pos = 0;
	int V[10];
	cout << "Preencha o vetor" << endl;
	for(int i = 1;i <= 10;i++){
		cout << "Digite o valor na posicao " << i << endl;
		cin >> V[i];
	}
		for(int j = 0;j < 10-1;j++){
			maior = j;
				for(int i = j + 1;i < 10;i++){
					if(V[i] > V[maior]){
						maior = i;
					}
				}
						aux = V[j];	
						V[j] = V[maior];
						V[maior] = aux;
		}
		cout <<  "Deseja buscar um elemnto no vetor?" << endl;
		cout << "Digite S(sim) ou N(nao)" << endl;
		cin >> letra;
		if(letra ==  "S"){
			cout << "Digite o valor que deseja encontrar" << endl;
			cin >> valor;
			for(int i = 1;i <= 10;i++){
				if(V[i] == valor){
					pos = i;
				}
			}
			if(pos != 0){
				cout << "O valor " << valor << " esta na posicao " << pos << endl;
			}else{
					cout << "NÃ£o existe" << endl;
				}
		
		}else{
			return 0;
		}
}
